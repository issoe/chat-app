BoxLayout:
    orientation: "vertical"

    BoxLayout:
        padding: 25
        size_hint: 1, 0.1
        
        Button:
            text: "Welcome ..."
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    BoxLayout:
        padding: 25
        size_hint: 1, 0.65

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.35, 1

            BoxLayout:
                size_hint: 1, 0.1

                Button:
                    text: "..."
                    size_hint: 0.7, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}    

                Button:
                    text: "Add"
                    size_hint: 0.3, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}  

            Button:
                text: "list_clients"
                size_hint: 1, 0.9
                pos_hint: {"center_x": 0.5, "center_y": 0.5}    

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.65, 1

            Button:
                text: "You're chatting with ..."
                size_hint: 1, 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
    
            Button:
                text: "chatting_box"
                size_hint: 1, 0.9
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

    BoxLayout:
        padding: 25
        size_hint: 1, 0.15
        
        TextInput:
            id: inputFromUser
            hint_text: 'Enter text ...'
            multiline: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            
            
    BoxLayout:
        padding: 25
        size_hint: 1, 0.1

        Button:
            text: "delete_box_1"
            size_hint: 0.25, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}    

        Button:
            text: "delete_box_2"
            size_hint: 0.25, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "delete_box_3"
            size_hint: 0.25, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Send"
            size_hint: 0.25, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}  
            on_press: app.on_press_button_send(inputFromUser.text)          